/**
 * Computes the sum of three bits.
 */
CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    HalfAdder(a=b, b=c, sum=o1, carry=o2);
    HalfAdder(a=a, b=o1, sum=sum, carry=o4);
    Or(a=o2, b=o4, out=carry);
}
